<!DOCTYPE html>
<html lang="es">
  <!-- Archivo parcial para el head -->
  <%- include('partials/head.ejs') %>

  <!-- Body -->
  <!-- Definimos un selector de clase que afectará al body para el color -->
  <body class="bgLightgrey">
    <!-- Header -->
    <!-- Definimos un selector de clase que afectará al header para el color -->

    <%- include('partials/header.ejs') %>

    <!-- Main -->
    <main>
      <h1>Lista de usuarios</h1>
      <ul>
        <% for (let i = 0; i < users.length; i++) { %>
        <li>
          <a href="/users/detail?userName=<%= users[i].userName %>"
            ><%= users[i].nameAndLastname %></a
          >
          <form
            action="/users/delete/<%= users[i].userName %>?_method=DELETE"
            method="POST"
          >
            <button type="submit">Delete</button>
          </form>
        </li>
        <% } %>
      </ul>
      <h2>Search</h2>
      <form action="/users/search" method="get">
        <input type="text" name="search" id="search" />
        <input type="submit" value="search" />
      </form>
    </main>

    <!-- Footer -->
    <!-- Creo un selector de clase para el fondo del footer -->
    <!-- Archivo parcial para el footer -->
    <%- include('partials/footer.ejs') %>
  </body>
</html>
